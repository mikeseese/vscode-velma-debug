{
  "name": "vscode-sdb-debug",
  "displayName": "Solidity Debugger",
  "version": "0.1.0",
  "publisher": "SeesePlusPlus",
  "description": "Visual Studio Code debug adapter for the sdb (Solidity Debugger) runtime",
  "author": {
    "name": "Mike Seese",
    "email": "seesemichaelj@gmail.com"
  },
  "keywords": [
    "solidity",
    "debug",
    "ethereum",
    "sdb"
  ],
  "engines": {
    "vscode": "^1.17.0",
    "node": "^7.9.0"
  },
  "categories": [
    "Debuggers"
  ],
  "dependencies": {
    "path": "^0.12.7",
    "solidity-debugger": "git+ssh://gitlab.com:seeseplusplus/solidity-debugger.git",
    "vscode": "^1.1.6",
    "vscode-debugadapter": "^1.25.0",
    "vscode-debugprotocol": "^1.25.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.54",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "vsce": "^1.34.0",
    "vscode-debugadapter-testsupport": "^1.25.0"
  },
  "scripts": {
    "prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "tslint": "tslint ./src/**/*.ts",
    "watch": "tsc -w -p ./src",
    "test": "mocha --inspect-brk -u tdd ./out/test/",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "main": "./out/src/sdbExtension",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "solidity"
      }
    ],
    "debuggers": [
      {
        "type": "sdb",
        "label": "Solidity Debugger",
        "program": "./out/src/sdbDebug.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "sdb",
            "request": "launch",
            "name": "Debug Solidity",
            "stopOnEntry": false
          }
        ],
        "configurationSnippets": [
          {
            "label": "Solidity: Launch",
            "description": "Runs the Solidity debugger (sdb) and attaches to a TestRPC instance",
            "body": {
              "type": "sdb",
              "request": "launch",
              "name": "Debug Solidity",
              "stopOnEntry": false
            }
          }
        ],
        "variables": {}
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/seese-ethereum/vscode-sdb-debug.git"
  },
  "bugs": {
    "url": "https://gitlab.com/seese-ethereum/vscode-sdb-debug/issues"
  },
  "homepage": "https://gitlab.com/seese-ethereum/vscode-sdb-debug#README"
}
